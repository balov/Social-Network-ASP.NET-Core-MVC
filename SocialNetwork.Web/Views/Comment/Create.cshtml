@model PostCommentCreateModel
@{
    ViewData["Title"] = "Submit a Comment";
}

<br />
<h3 class="text-center">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="well">
            <div class="row">
                <div class="col-sm-2">
                    <img src="@Model.UserProfilePicture" class="img-circle pull-left" height="55" width="55" alt="Avatar">
                </div>
                <div class="col-sm-10 text-left">
                    <div class="row"><strong>@Model.UserFullName</strong> is feeling @Model.Feeling.ToString()</div>
                    <div class="row"><small>@Model.Date.ToShortDateString()</small></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <p>@Model.Text</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Photo) && Model.Photo != null)
            {

                <div class="row">
                    <img src="@Model.Photo" class="img-responsive" style="width: 100%" alt="Avatar">
                </div>

            }
            <div class="row">
                <div class="col-sm-4">
                    <small>@Model.Likes Likes</small>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommentText"></label>
                <textarea asp-for="CommentText" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id"/>
            <input asp-for="Date" class="form-control" type="hidden" value="@Model.Date" />
            <input asp-for="Feeling" class="form-control" type="hidden" value="@Model.Feeling" />
            <input asp-for="Likes" class="form-control" type="hidden" value="@Model.Likes" />
            <input asp-for="Photo" class="form-control" type="hidden" value="@Model.Photo" />
            <input asp-for="Text" class="form-control" type="hidden" value="@Model.Text" />
            <input asp-for="UserFullName" class="form-control" type="hidden" value="@Model.UserFullName" />
            <input asp-for="UserProfilePicture" class="form-control" type="hidden" value="@Model.UserProfilePicture" />
            <button type="submit" class="btn btn-primary">Submit</button>  
            <a href='javascript:history.go(-1)' class="btn btn-default">Cancel</a>
        </form>
       
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}